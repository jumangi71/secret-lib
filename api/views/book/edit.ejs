<dialog class="mdl-dialog" id="removeDialog">
  <h4 class="mdl-dialog__title">Вы уверены?</h4>
  <div class="mdl-dialog__content">
    <p>
      Книга будет удалена!
    </p>
  </div>
  <div class="mdl-dialog__actions">
    <button type="button" class="mdl-button" id="removeBook" data-id="<%= book.id %>">Удалить</button>
    <button type="button" class="mdl-button close">Нет</button>
  </div>
</dialog>

<div class="mb30 mt30">
  <section class="section--center mdl-grid mdl-grid--no-spacing mdl-shadow--2dp container">
    <header class="section__play-btn mdl-cell mdl-cell--2-col mdl-color--white mdl-color-text--white">
      <% if (book.cover) { %>
      <div class="book-cover" id="cover-v" style="background-image: url('<%= book.cover %>')"></div>
      <% } else { %>
      <div class="book-cover book-cover_default" id="cover-v"></div>
      <% } %>
    </header>
    <div class="mdl-card mdl-cell mdl-cell--10-col-desktop mdl-cell--6-col-tablet mdl-cell--4-col-phone" style="overflow: visible">
      <div class="mdl-card__supporting-text">
        <form action="/book/<%= book.id %>" id="addForm" method="post">
          <input type="hidden" name="cover" id="cover" value="<%= book.cover %>">
          <div class="mdl-grid">
            <div class="mdl-cell mdl-cell--6-col">
              <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                <input class="mdl-textfield__input" type="text" id="title" name="title" value="<%= book.title ? book.title : '' %>">
                <label class="mdl-textfield__label" for="title">Название</label>
              </div>
              <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                <input class="mdl-textfield__input" type="text" id="author" name="author" value="<%= book.author ? book.author : '' %>">
                <label class="mdl-textfield__label" for="author">Авторы</label>
              </div>
              <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                <input class="mdl-textfield__input" type="text" id="series" name="series" value="<%= book.series ? book.series : '' %>">
                <label class="mdl-textfield__label" for="series">Серия</label>
              </div>
              <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                <input class="mdl-textfield__input" type="text" id="publishing_house" name="publishing_house" value="<%= book.publishing_house ? book.publishing_house : '' %>">
                <label class="mdl-textfield__label" for="publishing_house">Издательство</label>
              </div>
              <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                <textarea class="mdl-textfield__input" type="text" rows= "3" id="description" name="description"><%= book.description ? book.description : '' %></textarea>
                <label class="mdl-textfield__label" for="description">Описание</label>
              </div>

              <div class="mdl-selectfield">
                <select name="rack" id="rack">
                  <option value="" disabled>Стеллаж</option>
                  <% var racks = ['черный (левый)', 'мал. белый (слева)', 'черный (правый)', 'мал.белый (справа)', 'белый'] %>
                  <% _.forEach(racks, function(rack) { %>
                      <option <%= (book.rack == rack) ? 'selected' : '' %>><%= rack %></option>
                  <% }) %>
                </select>
              </div>
              <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                <input class="mdl-textfield__input" type="text" pattern="-?[0-9]*(\.[0-9]+)?" id="block" name="block" value="<%= book.block ? book.block : '' %>">
                <label class="mdl-textfield__label" for="block">Ярус (снизу)</label>
                <span class="mdl-textfield__error">Должно быть число</span>
              </div>
              <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                <input class="mdl-textfield__input" type="text" pattern="-?[0-9]*(\.[0-9]+)?" id="shelf" name="shelf" value="<%= book.shelf ? book.shelf : '' %>">
                <label class="mdl-textfield__label" for="shelf">Полка (слева)</label>
                <span class="mdl-textfield__error">Должно быть число</span>
              </div>
            </div>
            <div class="mdl-cell mdl-cell--6-col">
              <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                <input class="mdl-textfield__input" type="text" id="isbn-search" name="isbn">
                <label class="mdl-textfield__label" for="isbn-search">ISBN</label>
              </div>
              <button class="mdl-button mdl-js-button mdl-button--raised mdl-button--accent" type="button" disabled id="isbn-action">
                <span>Импорт по ISBN</span>
              </button>
            </div>

            <div class="mdl-cell mdl-cell--12-col">
              <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">
                Изменить
              </button>
              &nbsp;
              <button type="submit" disabled class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--color">
                Скрыть
              </button>
              &nbsp;
              <button type="button" id="removeCheck" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--color">
                Удалить
              </button>
            </div>

          </div>
        </form>
      </div>
    </div>
  </section>
</div>