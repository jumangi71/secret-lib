
<div class="card-book mdl-card mdl-shadow--2dp mdl-cell mdl-cell--2-col">
  <div class="mdl-card__title mdl-card--expand" style="background-image: url(<%= (!_.isEmpty(book.cover) && book.cover != 'undefined') ? book.cover : '' %>)">
    <h4 class="mdl-card__title-text"><%= _.trunc(book.title, {'length': 48}) %></h4>
  </div>
  <% if (book.author) { %>
  <div class="mdl-card__supporting-text">
    <%= book.author %>
  </div>
  <% } %>
  <a class="card-book__anchor" href="<%= book.link ? book.link() : '#' %>">&nbsp;</a>
</div>
