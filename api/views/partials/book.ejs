
<div class="card-book mdl-card mdl-shadow--2dp mdl-cell mdl-cell--2-col">
  <div class="mdl-card__title mdl-card--expand" style="background-image: url(<%= book.cover ? book.cover : '' %>)">
    <h4 class="mdl-card__title-text"><%= _.trunc(book.title, {'length': 48}) %></h4>
  </div>
  <% if (book.author) { %>
  <div class="mdl-card__supporting-text">
    <%= book.author %>
  </div>
  <% } %>
  <div class="mdl-card__actions mdl-card--border">
    <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" href="<%= book.link ? book.link() : '#' %>">
      Подробнее
    </a>
  </div>
</div>
