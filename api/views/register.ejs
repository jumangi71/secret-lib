<div class="">
  <div class="mdl-card mdl-shadow--6dp">
    <div class="mdl-card__title mdl-color--black mdl-color-text--white">
      <h2 class="mdl-card__title-text">Rambler & Co.</h2>
    </div>
    <div class="mdl-card__supporting-text">
      <form action="/registration" method="POST">

        <div class="mdl-grid mdl-grid--no-spacing">
          <div class="mdl-cell mdl-cell--7-col">
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label <%= (errors) ? 'is-invalid' : '' %>">
              <input class="mdl-textfield__input" type="text" id="username" name="username" value="<%= (data && data.username) ? data.username : '' %>"/>
              <label class="mdl-textfield__label" for="username">Логин</label>
            </div>
          </div>
          <div class="mdl-cell mdl-cell--5-col">
            <div class="mdl-textfield mdl-js-textfield">
              <span>@rambler-co.ru</span>
            </div>
          </div>
        </div>

        <button class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" type="submit">Получить пароль</button>
      </form>
    </div>
  </div>
</div>
